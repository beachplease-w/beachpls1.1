<div class="card-tournament">
    <%= image_tag "https://www.sandsystem.com/beach-volley/wp-content/uploads/2019/01/cropped-jersey.jpg" %>
    <div class="card-tournament-infos">
      <div class="tournament-name">
      <h2><%= tournament.name.upcase %></h2>
      </div>
      <div class="price">
        <i class="fas fa-trophy" style="color: gold"></i> <%= humanized_money_with_symbol(tournament.prize_money) %>
      </div>
      <div class="tournament-info">
        <p><%= tournament.address.split.last(2).join(" ") %></p>
        <p><% if tournament.genre == "Homme" %>
            <i class="fas fa-male"></i><i class="fas fa-male"></i>
          <% else %>
            <i class="fas fa-female"></i><i class="fas fa-female"></i>
          <% end %>
        <%= tournament.inscriptions.count %> / <%= tournament.equipe_tableau_principal + tournament.place_reservees_qualif %></p>

        <p><i class="far fa-calendar-alt"></i> <%= tournament.date %></p>
      </div>
      <h2 class="series"><%= tournament.serie %></h2>
      <%# if !current_user.tournaments.where(id: tournament.id).any?  %>
       <!-- <button type="button" class="btn-yours btn-position-card" data-toggle="modal" data-target="#myModal-<%= tournament.id %>">S'inscrire</button> -->
       <%# end %>
      <%= image_tag "https://scontent-cdt1-1.xx.fbcdn.net/v/t1.0-9/15697766_1264943210239595_1378117228343581992_n.jpg?_nc_cat=106&_nc_ht=scontent-cdt1-1.xx&oh=416872ef2f4ebf8e001ce2e531762dac&oe=5D1B825B", class: 'card-tournament-user avatar-bordered' %>
    </div>
    <%= link_to "", tournament_path(tournament), class: "card-link" %>
</div>
