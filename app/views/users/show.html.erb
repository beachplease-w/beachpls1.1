<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

<div class="container">
  <div class="contenant">
    <div class="col-sm-2">
      <nav class="nav-sidebar">
      <ul class="nav tabs">
            <li class="active"><a href="#informations" data-toggle="tab">Mes informations</a></li>
            <li class=""><a href="#tournois" data-toggle="tab">Mes tournois</a></li>
            <li class=""><a href="#equipes" data-toggle="tab">Mes partenaires</a></li>
            <li class=""><a href="#stats" data-toggle="tab">Mes stats</a></li>
            <li class="">
              <a href="#mymessages" data-toggle="tab">
                <div class="user-messages">
                  Mes messages
                  <% current_user.messages.each do |message| %>
                    <% @messages = Message.where(tournament_id: message.tournament_id) %>
                  <% end %>
                  <% @messages_count = [] %>
                  <% @messages.each do |message| %>
                    <% if message.user != current_user %>
                      <% @messages_count << message %>
                    <% end %>
                  <% end %>
                  <div class="message-counter">
                    <% if @messages_count != 0 %>
                      <%= @messages_count.count %>
                    <% end %>
                  </div>
                </div>
              </a>
            </li>
      </ul>
      </nav>
    </div>
    <div class="tab-content">
      <div class="tab-pane active" id="informations">
        <%= cl_image_tag current_user.photo, width: 100, height: 100, crop: :thumb, class: "avatar"%>
        <hr>
        <p><%= current_user.first_name %> <%= current_user.last_name.upcase %> </p>
        <p>Date de naissance: <%= current_user.birth_date %></p>
        <p>NumÃ©ro de licence: <%= current_user.license_no %></p>
        <p>Email: <%= current_user.email %></p>
        <%= link_to edit_user_registration_path do %>
        <i class="fas fa-user-edit"></i>
        <% end %>
      </div>
      <div class="tab-pane" id="tournois">
        <%= render 'shared/tournament-display' %>
        <hr>
      </div>
      <%= render 'shared/team-display' %>
      <div class="tab-pane" id="stats">
        <%= render 'shared/stats' %>
          <hr>
      </div>
      <div class="tab-pane" id="mymessages">
        <%= render 'shared/messages' %>
          <hr>
      </div>
    </div>
    <div id="calendar" class="text-center" data-events="<%= @events.to_json %>">
    </div>
  </div>
</div>
