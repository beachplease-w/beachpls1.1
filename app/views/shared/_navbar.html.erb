<div class="navbar-beach">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-beach-brand" do %>
    <%= image_tag "logo.png", height: 50 %>
  <% end %>

  <!-- Center Navigation -->
  <div class="navbar-beach-right">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Tournois", tournaments_path, class: "navbar-beach-item navbar-beach-link" %>
      <%= link_to "Classements", "#", class: "navbar-beach-item navbar-beach-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-beach-item">
        <div class="dropdown">
          <%= cl_image_tag current_user.photo, width: 40, height: 40, crop: :thumb, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-beach-dropdown-menu">
            <li>
              <%= link_to user_path(current_user.id) do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profil") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Se dÃ©connecter") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Se connecter"), new_user_session_path, class: "navbar-beach-item navbar-beach-link" %>
    <% end %>
  </div>

