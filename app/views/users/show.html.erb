<link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<div class="container">
  <div class="col-sm-2">
    <nav class="nav-sidebar">
    <ul class="nav tabs">
          <li class="active"><a href="#informations" data-toggle="tab">Mes informations</a></li>
          <li class=""><a href="#tournois" data-toggle="tab">Mes tournois</a></li>
          <li class=""><a href="#equipes" data-toggle="tab">Mes équipes</a></li>
          <li class=""><a href="#stats" data-toggle="tab">Mes stats</a></li>
    </ul>
  </nav>
</div>
<!-- tab content -->
<div class="tab-content">
<div class="tab-pane active text-style" id="informations">
  <p><%= current_user.first_name %> <%= current_user.last_name.upcase %> </p>
       <p><%= current_user.birth_date %></p>
       <p><%= current_user.license_no %></p>
       <p><%= current_user.email %></p>
       <%= link_to edit_user_registration_path do %>
       <i class="fas fa-user-edit"></i>
       <% end %>
       <hr>
       <div class="profile-img">
           <%= cl_image_tag current_user.photo %>
       </div>
</div>
<div class="tab-pane text-style" id="tournois">
  <h2>Mes tournois</h2>
   <div class="container">
   <p>À venir</p>
     <% @tournaments.each do |tournament| %>
      <%= tournament.name %>
     <% end %>
   </div>
   <p>Passés</p>
    <hr>
          <img src="http://placehold.it/150x90" class="img-rounded pull-left">
</div>
<div class="tab-pane text-style" id="equipes">
  <h2>Mes équipes</h2>
  <p>Voici mes équipes</p>
    <hr>
    <div class="col-xs-6 col-md-3">
      <img src="http://placehold.it/150x150" class="img-rounded pull-right">
  </div>
</div>
<div class="tab-pane text-style" id="stats">
  <h2>Mes stats</h2>
  <p>Voici mes stats</p>
    <hr>
    <div class="col-xs-6 col-md-3">
      <img src="http://placehold.it/150x150" class="img-rounded pull-right">
  </div>
</div>

</div>

</div>

