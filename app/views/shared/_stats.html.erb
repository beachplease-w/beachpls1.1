  <p>Classement actuel : 12Ã¨me</p>
  <%= image_tag 'ranking.png', height: 50 %>
  <hr>
  <% @user.tournaments.each do |tournament| %>
    <div class="tournament-product">
      <div class="tournament">
        <div class="col-xs-6">
          <p><%= tournament.name %></p>
          <p><%= tournament.date %></p>
        </div>
        <div class="col-xs-6">
          <% if tournament.date < Date.today %>
            <p>Place : <%= rand(1..5) %></p>
            <p>Points : <%= [150, 250, 500, 750, 1000, 1500, 2000, 2500].sample %></p>
          <% else %>
            <%= image_tag 'waiting.png', height: 20, width: 20 %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
