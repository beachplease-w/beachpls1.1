<h1>Confirmation d'inscription Ã  <%= @inscription.tournament.name %> </h1>
<p>En binome avec
  <% player1 = @inscription.team.users[0] %>
  <% if player1 == current_user %>
    <%= @inscription.team.users[1].first_name %>
  <% else %>
    <%= @inscription.team.users[0].first_name %>
  <% end %>
</p>
<p>Le <%= @inscription.tournament.date %></p>
<%= form_tag inscription_payments_path(@inscription) do %>
  <article>
    <label class="amount">
      <span>Prix: <%= humanized_money_with_symbol(@inscription.tournament.price) %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="My Tournament"
    data-email="<%= current_user.email %>"
    data-description="Teddy <%= @inscription.tournament_sku %>"
    data-amount="<%= @inscription.tournament.price_cents %>"
    data-currency="<%= @inscription.tournament.price.currency %>"></script>

<% end %>
