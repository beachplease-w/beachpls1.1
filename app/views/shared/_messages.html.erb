<% current_user.messages.each do |message| %>
 <% @messages = Message.where(tournament_id: message.tournament_id) %>
<% end %>
<% @messages.each do |message| %>
  <% if message.user != current_user %>
    <%= link_to tournament_path(message.tournament) do %>
      <div class="beach-boxes">
    <div class="rdg-expertise-category-beach"><span><%=cl_image_tag message.user.photo, width: 50, height: 50, crop: :thumb, class: 'avatar'%> <%= message.user.first_name %></span></div>
    <div class="rdg-expertise-bar-beach rdg-brief-bg rdg-animated-delay-0 text-right" style="float: left;"></div>
    <div style="clear: both;"></div>
    <div class="rdg-expertise-description-beach"><span>
      <%= message.tournament.name %>
    </span></div>
</div>
    <% end %>
  <% end %>
<% end %>
