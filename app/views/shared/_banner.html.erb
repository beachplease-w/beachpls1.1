
<div class="banner" style="background-image: linear-gradient(rgba(255,255,255,0.3), rgba(00,00,00,0.7)), url('<%= image_path "banner.jpg" %>');">

  <div class="banner-content">
    <div class="title">
      <h1>Trouve ton tournoi ! </h1>
    </div>
    <div class="paragraph">
      <p>Tous les tournois du Beach Volley français au même endroit</p>
    </div>
    <div class="search-bar">
      <%= form_tag tournaments_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Ville, série ou nom" %>
      <button class="btn btn-search"><i class="fas fa-volleyball-ball"></i></button>
      <% end %>
    </div>
  </div>
</div>
